---
import Container from "@components/section/Container.astro";
import Logo from "@components/base/Logo.astro";
---

<footer class="font-sans bg-white dark:bg-muted-900">
  <Container>
    <div class="px-5 py-24 mx-auto">
      <div class="flex flex-wrap md:text-left text-center -mb-10 -mx-4">
        <div class="w-full mb-10 ltablet:mb-0 lg:mb-0 ltablet:w-2/6 lg:w-2/6 px-4">
          <div class="max-w-[280px] mx-auto md:mx-0">
            <a
              href="/"
              class="flex items-center justify-center md:justify-start gap-3 mb-4"
            >
              <div class="text-primary-600 transition-all duration-300">
                <Logo class="'w-9 h-9'" />
              </div>
              <span
                class="font-sans text-3xl font-black tracking-widest uppercase text-primary-800 dark:text-muted-100"
                >SRT</span
              >
            </a>
            <p class="text-sm text-muted-500 dark:text-muted-400 mb-10 md:mb-0">
              PT Sonamoo Rubber Tech - Leading rubber manufacturing solutions 
              with quality and innovation at the forefront.
            </p>
          </div>
        </div>
        <div class="lg:w-1/6 ltablet:w-1/6 md:w-1/2 w-full px-4">
          <h2
            class="font-medium tracking-widest text-sm mb-5 text-muted-800 dark:text-muted-100"
          >
            COMPANY
          </h2>
          <ul class="list-none space-y-3 mb-10">
            <li>
              <a
                href="/about"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >About Us</a
              >
            </li>
            <li>
              <a
                href="/products"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >Products</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >Contact</a
              >
            </li>
          </ul>
        </div>
        <div class="lg:w-1/6 ltablet:w-1/6 md:w-1/2 w-full px-4">
          <h2
            class="font-medium tracking-widest text-sm mb-5 text-muted-800 dark:text-muted-100"
          >
            SERVICES
          </h2>
          <ul class="list-none space-y-3 mb-10">
            <li>
              <a
                href="/products"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >Rubber Manufacturing</a
              >
            </li>
            <li>
              <a
                href="/products"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >Custom Solutions</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >Consultation</a
              >
            </li>
          </ul>
        </div>
        <div class="lg:w-1/6 ltablet:w-1/6 md:w-1/2 w-full px-4">
          <h2
            class="font-medium tracking-widest text-sm mb-5 text-muted-800 dark:text-muted-100"
          >
            SUPPORT
          </h2>
          <ul class="list-none space-y-3 mb-10">
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >Contact Support</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500 dark:text-muted-400 hover:text-primary-500 dark:hover:text-primary-500 transition-colors duration-300"
                >Technical Help</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </Container>

  <div class="bg-muted-100 dark:bg-muted-800">
    <Container>
      <div class="py-4 px-5 flex flex-wrap flex-col sm:flex-row">
        <p
          class="text-muted-500 dark:text-muted-400 text-sm text-center sm:text-left"
        >
          Â© {new Date().getFullYear()} PT Sonamoo Rubber Tech. All Rights Reserved.
        </p>
        <span
          class="sm:ml-auto sm:mt-0 mt-2 sm:w-auto w-full sm:text-left text-center text-muted-500 dark:text-muted-400 text-sm"
          >Built by <a href="https://oknum.studio" class="hover:text-emerald-700 font-bold"
            >Oknum.Studio</a
          >
        </span>
      </div>
    </Container>
  </div>
</footer>
