---
import Container from "@components/section/Container.astro";
import Logo from "@components/base/Logo.astro";
import { t, getCurrentLocale } from '@utils/i18n';
const currentLocale = getCurrentLocale(Astro.url);
---

<footer class="font-sans bg-white">
  <Container>
    <div class="px-5 py-24 mx-auto">
      <div class="flex flex-wrap md:text-left text-center -mb-10 -mx-4">
        <div class="w-full mb-10 ltablet:mb-0 lg:mb-0 ltablet:w-2/6 lg:w-2/6 px-4">
          <div class="max-w-[280px] mx-auto md:mx-0">
            <a
              href="/"
              class="flex items-center justify-center md:justify-start gap-3 mb-4"
            >
              <div class="text-primary-600 transition-all duration-300">
                <Logo class="'w-9 h-9'" />
              </div>
              <span
                class="font-sans text-3xl font-black tracking-widest uppercase text-primary-800 "
                >SRT</span
              >
            </a>
            <p class="text-sm text-muted-500  mb-10 md:mb-0">
              {t(currentLocale, 'section.footer.description')}
            </p>
          </div>
        </div>
        <div class="lg:w-1/6 ltablet:w-1/6 md:w-1/2 w-full px-4">
          <h2
            class="font-medium tracking-widest text-sm mb-5 text-muted-800 "
          >
            {t(currentLocale, 'section.footer.company.title')}
          </h2>
          <ul class="list-none space-y-3 mb-10">
            <li>
              <a
                href="/about"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.company.links.about')}</a
              >
            </li>
            <li>
              <a
                href="/products"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.company.links.products')}</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.company.links.contact')}</a
              >
            </li>
          </ul>
        </div>
        <div class="lg:w-1/6 ltablet:w-1/6 md:w-1/2 w-full px-4">
          <h2
            class="font-medium tracking-widest text-sm mb-5 text-muted-800 "
          >
            {t(currentLocale, 'section.footer.services.title')}
          </h2>
          <ul class="list-none space-y-3 mb-10">
            <li>
              <a
                href="/products"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.services.links.manufacturing')}</a
              >
            </li>
            <li>
              <a
                href="/products"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.services.links.custom')}</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.services.links.consultation')}</a
              >
            </li>
          </ul>
        </div>
        <div class="lg:w-1/6 ltablet:w-1/6 md:w-1/2 w-full px-4">
          <h2
            class="font-medium tracking-widest text-sm mb-5 text-muted-800 "
          >
            {t(currentLocale, 'section.footer.support.title')}
          </h2>
          <ul class="list-none space-y-3 mb-10">
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.support.links.contact_support')}</a
              >
            </li>
            <li>
              <a
                href="/contact"
                class="text-sm text-muted-500  hover:text-primary-500  transition-colors duration-300"
                >{t(currentLocale, 'section.footer.support.links.technical_help')}</a
              >
            </li>
          </ul>
        </div>
      </div>
    </div>
  </Container>

  <div class="bg-muted-100 ">
    <Container>
      <div class="py-4 px-5 flex flex-wrap flex-col sm:flex-row">
        <p
          class="text-muted-500  text-sm text-center sm:text-left"
        >
          Â© {new Date().getFullYear()} PT Sonamoo Rubber Tech. {t(currentLocale, 'section.footer.copyright')}
        </p>
        <span
          class="sm:ml-auto sm:mt-0 mt-2 sm:w-auto w-full sm:text-left text-center text-muted-500  text-sm"
          >{t(currentLocale, 'section.footer.built_by')} <a href="https://oknum.studio" class="hover:text-emerald-700 font-bold"
            >Oknum.Studio</a
          >
        </span>
      </div>
    </Container>
  </div>
</footer>
