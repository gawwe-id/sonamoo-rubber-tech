---
import ButtonMain from "@components/base/ButtonMain.astro";
import ButtonSub from "@components/base/ButtonSub.astro";
import { t, getCurrentLocale } from "@utils/i18n";
const currentLocale = getCurrentLocale(Astro.url);
---

<div
  class="min-h-screen w-full overflow-hidden bg-muted-100 dark:bg-muted-1000 relative"
>
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 bg-gradient-to-r from-transparent via-muted-500 dark:via-muted-500 to-transparent transform -skew-y-12"></div>
  </div>
  <div class="min-h-screen w-full max-w-7xl mx-auto flex items-center px-4 relative z-10">
    <div class="w-full grid grid-cols-12">
      <div class="col-span-12 ltablet:col-span-5 lg:col-span-5">
        <div
          class="h-full ptablet:max-w-lg ptablet:mx-auto flex items-center mb-8 ltablet:mb-0 lg:mb-0"
        >
          <div
            class="text-center ltablet:text-left lg:text-left font-sans space-y-4"
          >
            <div class="inline-flex items-center px-3 py-1.5 rounded-full bg-primary-100 border border-primary-200 dark:bg-primary-900/30 text-primary-700 dark:text-primary-300 text-sm font-medium mb-4">
              <iconify-icon class="w-4 h-4 mr-2" icon="lucide:building-2"></iconify-icon>
              PT. Sonamoo Rubber Tech
            </div>
            <h1
              class="font-black text-4xl ptablet:text-5xl lg:text-6xl text-muted-800 dark:text-white"
            >
              {t(currentLocale, 'hero.title')}
            </h1>
            <p class="text-muted-500 text-lg dark:text-muted-400">
              {t(currentLocale, 'hero.subtitle')}
            </p>
            <div
              class="w-full flex items-center justify-center ltablet:justify-start lg:justify-start gap-2"
            >
              <ButtonMain to={"/products"} class="'min-w-[130px]'"
                >{t(currentLocale, 'hero.see_product')}</ButtonMain
              >
              <ButtonSub to={"/about"} class="'min-w-[130px]'">{t(currentLocale, 'hero.about')}</ButtonSub
              >
            </div>
          </div>
        </div>
      </div>
      <div class="relative col-span-12 ltablet:col-span-7 lg:col-span-7">
        <img
          src="/img/screens/hero-img.png"
          class="block dark:hidden w-full ltablet:max-w-[540px] max-w-[620px] mx-auto"
          alt="Sonamoo Rubber Tech Products"
        />
      </div>
    </div>
  </div>
</div>