---
import { t, getCurrentLocale } from '@utils/i18n';
const currentLocale = getCurrentLocale(Astro.url);
---

<div class="py-10">
  <div class="w-full ltablet:max-w-4xl max-w-5xl mx-auto">
    <div
      class="bg-primary-900 rounded-3xl shadow-xl overflow-hidden ltablet:grid ltablet:grid-cols-2 ltablet:gap-4 lg:grid lg:grid-cols-2 lg:gap-4"
    >
      <div
        class="flex items-center pt-10 pb-12 px-6 sm:pt-16 sm:px-16 ltablet:py-20 ltablet:pr-0 lg:py-20 lg:pr-0 xl:px-20"
      >
        <div class="ltablet:self-center lg:self-center font-sans">
          <h2 class="text-3xl font-medium text-white sm:text-4xl">
            <span class="block">{t(currentLocale, 'content.cta.title_line1')}</span>
            <span class="block">{t(currentLocale, 'content.cta.title_line2')}</span>
          </h2>
          <p class="mt-4 text-lg leading-6 text-white">
            {t(currentLocale, 'content.cta.description')}
          </p>
          <a
            href="/contact"
            class="mt-8 bg-white border border-transparent rounded-xl shadow px-6 py-4 inline-flex items-center text-sm font-medium text-muted-600 hover:text-white hover:bg-primary-400 transition-colors duration-300"
          >
            {t(currentLocale, 'content.cta.button')}
          </a>
        </div>
      </div>
      <div class="-mt-6 aspect-w-5 aspect-h-3 md:aspect-w-2 md:aspect-h-1">
        <img
          class="block translate-x-6 translate-y-6 rounded-md object-cover object-left-top sm:translate-x-16 ltablet:translate-y-20 lg:translate-y-20"
          src="https://ik.imagekit.io/gawwe/sonamoo/rubber-oto.jpg?updatedAt=1754229176397"
          alt="Cta image"
        />
        <img
          class="hidden translate-x-6 translate-y-6 rounded-md object-cover object-left-top sm:translate-x-16 ltablet:translate-y-20 lg:translate-y-20"
          src="https://ik.imagekit.io/gawwe/sonamoo/rubber-oto.jpg?updatedAt=1754229176397"
          alt="Cta image"
        />
      </div>
    </div>
  </div>
</div>
