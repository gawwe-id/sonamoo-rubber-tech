---
import { t, getCurrentLocale } from '@utils/i18n';
const currentLocale = getCurrentLocale(Astro.url);
---

<div
  class="sticky top-24 md:top-20 w-full flex bg-white dark:bg-muted-800 border border-muted-200 dark:border-muted-700 rounded divide-x divide-muted-200 dark:divide-muted-700 shadow-xl shadow-muted-300/30 dark:shadow-muted-900/30 overflow-x-auto z-30"
>
  <button
    class="group flex-1 flex items-center px-5 py-3 whitespace-nowrap font-sans text-muted-800 dark:text-muted-100 hover:bg-muted-50 dark:hover:bg-muted-700 transition-colors duration-300"
    :class="activeCategory === 'all' ? 'bg-muted-50 dark:bg-muted-700' : ''"
    @click="activeCategory = 'all'"
  >
    <span
      class="flex items-center justify-center h-10 w-10"
      :class="activeCategory === 'all' ? 'text-rose-500' : 'text-muted-400 group-hover:text-primary-500'"
    >
      <iconify-icon class="iconify w-6 h-6 flex items-center justify-center text-2xl" icon="ph:grid-four-duotone"></iconify-icon>
    </span>
    <span>{t(currentLocale, 'content.products.toolbar.categories.all')}</span>
  </button>
  <button
    class="group flex-1 flex items-center px-5 py-3 whitespace-nowrap font-sans text-muted-800 dark:text-muted-100 hover:bg-muted-50 dark:hover:bg-muted-700 transition-colors duration-300"
    :class="activeCategory === 'otomotif' ? 'bg-muted-50 dark:bg-muted-700' : ''"
    @click="activeCategory = 'otomotif'"
  >
    <span
      class="flex items-center justify-center h-10 w-10"
      :class="activeCategory === 'otomotif' ? 'text-rose-500' : 'text-muted-400 group-hover:text-primary-500'"
    >
      <iconify-icon class="iconify w-6 h-6 flex items-center justify-center text-2xl" icon="ph:car-duotone"></iconify-icon>
    </span>
    <span>{t(currentLocale, 'content.products.toolbar.categories.otomotif')}</span>
  </button>
  <button
    class="group flex-1 flex items-center px-5 py-3 whitespace-nowrap font-sans text-muted-800 dark:text-muted-100 hover:bg-muted-50 dark:hover:bg-muted-700 transition-colors duration-300"
    :class="activeCategory === 'railway' ? 'bg-muted-50 dark:bg-muted-700' : ''"
    @click="activeCategory = 'railway'"
  >
    <span
      class="flex items-center justify-center h-10 w-10"
      :class="activeCategory === 'railway' ? 'text-rose-500' : 'text-muted-400 group-hover:text-primary-500'"
    >
      <iconify-icon class="iconify w-6 h-6 flex items-center justify-center text-2xl" icon="ph:train-duotone"></iconify-icon>
    </span>
    <span>{t(currentLocale, 'content.products.toolbar.categories.railway')}</span>
  </button>
  <button
    class="group flex-1 flex items-center px-5 py-3 whitespace-nowrap font-sans text-muted-800 dark:text-muted-100 hover:bg-muted-50 dark:hover:bg-muted-700 transition-colors duration-300"
    :class="activeCategory === 'industrial' ? 'bg-muted-50 dark:bg-muted-700' : ''"
    @click="activeCategory = 'industrial'"
  >
    <span
      class="flex items-center justify-center h-10 w-10"
      :class="activeCategory === 'industrial' ? 'text-rose-500' : 'text-muted-400 group-hover:text-primary-500'"
    >
      <iconify-icon class="iconify w-6 h-6 flex items-center justify-center text-2xl" icon="ph:factory-duotone"></iconify-icon>
    </span>
    <span>{t(currentLocale, 'content.products.toolbar.categories.industrial')}</span>
  </button>
</div>
