---
import { t, getCurrentLocale } from '@utils/i18n';
const currentLocale = getCurrentLocale(Astro.url);
---

<div class="flex flex-col-reverse md:flex-row items-center py-6">
  <!--Column-->
  <div class="w-full md:w-1/2 relative p-6">
    <!--Feature-->
    <div class="relative">
      <img 
        src="/img/screens/stats-left.png" 
        alt="Proses produksi karet menggunakan mesin di dalam pabrik" 
        class="w-full h-auto rounded-lg shadow-lg"
      />
    </div>
  </div>

  <!--Column-->
  <div class="w-full md:w-1/2 relative p-6">
    <!--Section content-->
    <div class="w-full max-w-lg space-y-4">
      <!--Badge-->
      <h4 class="font-sans font-semibold text-xs tracking-widest uppercase mb-3 text-primary-500">
        {t(currentLocale, 'content.features.left.badge')}
      </h4>
      <!--Title-->
      <h2 class="font-heading font-medium text-4xl text-muted-800 ">
        {t(currentLocale, 'content.features.left.title')}
      </h2>
      <!--Subtitle-->
      <p class="font-sans text-lg text-muted-500 ">
        {t(currentLocale, 'content.features.left.description')}
      </p>
      <!--Link-->
      <a href="#" class="group inline-flex items-center gap-4 text-primary-500 hover:text-primary-400 transition-colors duration-300">
        <span class="font-sans font-medium text-sm">
          {t(currentLocale, 'content.features.left.cta')}
        </span>
        <iconify-icon class="iconify w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" icon="lucide:arrow-right"></iconify-icon>
      </a>
    </div>
  </div>
</div>
