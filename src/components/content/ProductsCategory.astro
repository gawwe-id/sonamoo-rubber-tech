---
import ButtonSub from "@components/base/ButtonSub.astro";
import Card from "@components/base/Card.astro";
import Container from "@components/section/Container.astro";
import Section from "@components/section/Section.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import { t, getCurrentLocale } from '@utils/i18n';
const currentLocale = getCurrentLocale(Astro.url);
---

<div>
      <!-- Product Categories -->
  <Section id="products">
    <Container>
      <SectionTitle
        title={t(currentLocale, 'content.products_category.title')}
        subtitle={t(currentLocale, 'content.products_category.subtitle')}
        minititle={t(currentLocale, 'content.products_category.minititle')}
        class="'text-center mx-auto'"
      />

      <div class="grid lg:grid-cols-3 gap-8 mb-16">
        <!-- Automotive Products -->
        <Card class="'group p-8 hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 bg-gradient-to-br from-white to-primary-50   overflow-hidden relative'">
          <div class="absolute top-4 right-4 w-32 h-32 transition-opacity duration-300">
            <img src="https://ik.imagekit.io/gawwe/sonamoo/product-oto.png?updatedAt=1754229235696" alt="Automotive Products" class="w-full h-full object-contain" />
          </div>
          <div class="relative z-10">
            <div class="w-16 h-16 bg-primary-600 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
              <iconify-icon class="iconify w-20 h-20 text-white" icon="ph:car-duotone"></iconify-icon>
            </div>
            <h3 class="text-2xl font-bold text-muted-800  mb-4">{t(currentLocale, 'content.products_category.automotive.title')}</h3>
            <p class="text-muted-600  mb-6 leading-relaxed">
              {t(currentLocale, 'content.products_category.automotive.description')}
            </p>
            <div class="space-y-2 mb-6">
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-primary-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.automotive.products.car_tire_stopper')}
              </div>
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-primary-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.automotive.products.speed_bump_connecting')}
              </div>
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-primary-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.automotive.products.rubber_step_floor')}
              </div>
            </div>
            <ButtonSub to="/contact" class="'group-hover:bg-primary-600 group-hover:text-white transition-all duration-300'">
              <span>{t(currentLocale, 'content.products_category.automotive.button')}</span>
              <iconify-icon class="iconify w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" icon="lucide:arrow-right"></iconify-icon>
            </ButtonSub>
          </div>
        </Card>

        <!-- Railway Products -->
        <Card class="'group p-8 hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 bg-gradient-to-br from-white to-green-50   overflow-hidden relative'">
          <div class="absolute top-4 right-4 w-32 h-32 transition-opacity duration-300">
            <img src="https://ik.imagekit.io/gawwe/sonamoo/product-railway.png?updatedAt=1754229246141" alt="Railway Products" class="w-full h-full object-contain" />
          </div>
          <div class="relative z-10">
            <div class="w-16 h-16 bg-green-600 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
              <iconify-icon class="iconify w-20 h-20 text-white" icon="ph:train-duotone"></iconify-icon>
            </div>
            <h3 class="text-2xl font-bold text-muted-800  mb-4">{t(currentLocale, 'content.products_category.railway.title')}</h3>
            <p class="text-muted-600  mb-6 leading-relaxed">
              {t(currentLocale, 'content.products_category.railway.description')}
            </p>
            <div class="space-y-2 mb-6">
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-green-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.railway.products.duct_railway')}
              </div>
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-green-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.railway.products.corrugated_bellow')}
              </div>
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-green-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.railway.products.replacement_components')}
              </div>
            </div>
            <ButtonSub to="/contact" class="'group-hover:bg-green-600 group-hover:text-white transition-all duration-300'">
              <span>{t(currentLocale, 'content.products_category.railway.button')}</span>
              <iconify-icon class="iconify w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" icon="lucide:arrow-right"></iconify-icon>
            </ButtonSub>
          </div>
        </Card>

        <!-- Industrial Products -->
        <Card class="'group p-8 hover:shadow-2xl transition-all duration-500 hover:-translate-y-3 bg-gradient-to-br from-white to-orange-50   overflow-hidden relative'">
          <div class="absolute top-4 right-4 w-32 h-32 transition-opacity duration-300">
            <img src="https://ik.imagekit.io/gawwe/sonamoo/product-industrial.png?updatedAt=1754229223122" alt="Industrial Products" class="w-full h-full object-contain" />
          </div>
          <div class="relative z-10">
            <div class="w-16 h-16 bg-orange-600 rounded-xl flex items-center justify-center mb-6 group-hover:rotate-12 transition-transform duration-300">
              <iconify-icon class="iconify w-20 h-20 text-white" icon="ph:factory-duotone"></iconify-icon>
            </div>
            <h3 class="text-2xl font-bold text-muted-800  mb-4">{t(currentLocale, 'content.products_category.industrial.title')}</h3>
            <p class="text-muted-600  mb-6 leading-relaxed">
              {t(currentLocale, 'content.products_category.industrial.description')}
            </p>
            <div class="space-y-2 mb-6">
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-orange-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.industrial.products.silicon_oring')}
              </div>
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-orange-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.industrial.products.nbr_float')}
              </div>
              <div class="flex items-center text-sm text-muted-600 ">
                <iconify-icon class="iconify w-4 h-4 text-orange-600 mr-2" icon="lucide:check"></iconify-icon>
                {t(currentLocale, 'content.products_category.industrial.products.electronic_components')}
              </div>
            </div>
            <ButtonSub to="/contact" class="'group-hover:bg-orange-600 group-hover:text-white transition-all duration-300'">
              <span>{t(currentLocale, 'content.products_category.industrial.button')}</span>
              <iconify-icon class="iconify w-4 h-4 group-hover:translate-x-1 transition-transform duration-300" icon="lucide:arrow-right"></iconify-icon>
            </ButtonSub>
          </div>
        </Card>
      </div>
    </Container>
  </Section>
</div>