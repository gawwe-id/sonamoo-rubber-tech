---
import Card from "@components/base/Card.astro";
import Container from "@components/section/Container.astro";
import Section from "@components/section/Section.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import { t, getCurrentLocale } from '@utils/i18n';
const currentLocale = getCurrentLocale(Astro.url);
---

<Section>
    <Container>
      <div class="py-16" id="faq">
        <SectionTitle
          title={t(currentLocale, 'content.faq.title')}
          subtitle={t(currentLocale, 'content.faq.subtitle')}
          minititle={t(currentLocale, 'content.faq.minititle')}
          class="'text-center mx-auto'"
        />

        <div class="max-w-4xl mx-auto">
          <div x-data="{ activeTab: 1 }" class="space-y-4">
            <!-- FAQ 1 -->
            <Card class="'p-6'">
              <button 
                @click="activeTab = activeTab === 1 ? 0 : 1"
                class="w-full flex items-center justify-between text-left"
              >
                <h4 class="font-semibold text-lg text-muted-800 ">
                  {t(currentLocale, 'content.faq.questions.products.question')}
                </h4>
                <iconify-icon 
                  class="iconify w-5 h-5 text-muted-400 transition-transform duration-300"
                  :class="activeTab === 1 ? 'rotate-180' : ''"
                  icon="ph:caret-down"
                ></iconify-icon>
              </button>
              <div x-show="activeTab === 1" x-collapse class="mt-4">
                <p class="text-muted-600  leading-relaxed">
                  {t(currentLocale, 'content.faq.questions.products.answer')}
                </p>
              </div>
            </Card>

            <!-- FAQ 2 -->
            <Card class="'p-6'">
              <button 
                @click="activeTab = activeTab === 2 ? 0 : 2"
                class="w-full flex items-center justify-between text-left"
              >
                <h4 class="font-semibold text-lg text-muted-800 ">
                  {t(currentLocale, 'content.faq.questions.quality.question')}
                </h4>
                <iconify-icon 
                  class="iconify w-5 h-5 text-muted-400 transition-transform duration-300"
                  :class="activeTab === 2 ? 'rotate-180' : ''"
                  icon="ph:caret-down"
                ></iconify-icon>
              </button>
              <div x-show="activeTab === 2" x-collapse class="mt-4">
                <p class="text-muted-600  leading-relaxed">
                  {t(currentLocale, 'content.faq.questions.quality.answer')}
                </p>
              </div>
            </Card>

            <!-- FAQ 3 -->
            <Card class="'p-6'">
              <button 
                @click="activeTab = activeTab === 3 ? 0 : 3"
                class="w-full flex items-center justify-between text-left"
              >
                <h4 class="font-semibold text-lg text-muted-800 ">
                  {t(currentLocale, 'content.faq.questions.custom.question')}
                </h4>
                <iconify-icon 
                  class="iconify w-5 h-5 text-muted-400 transition-transform duration-300"
                  :class="activeTab === 3 ? 'rotate-180' : ''"
                  icon="ph:caret-down"
                ></iconify-icon>
              </button>
              <div x-show="activeTab === 3" x-collapse class="mt-4">
                <p class="text-muted-600  leading-relaxed">
                  {t(currentLocale, 'content.faq.questions.custom.answer')}
                </p>
              </div>
            </Card>

            <!-- FAQ 4 -->
            <Card class="'p-6'">
              <button 
                @click="activeTab = activeTab === 4 ? 0 : 4"
                class="w-full flex items-center justify-between text-left"
              >
                <h4 class="font-semibold text-lg text-muted-800 ">
                  {t(currentLocale, 'content.faq.questions.ordering.question')}
                </h4>
                <iconify-icon 
                  class="iconify w-5 h-5 text-muted-400 transition-transform duration-300"
                  :class="activeTab === 4 ? 'rotate-180' : ''"
                  icon="ph:caret-down"
                ></iconify-icon>
              </button>
              <div x-show="activeTab === 4" x-collapse class="mt-4">
                <p class="text-muted-600  leading-relaxed">
                  {t(currentLocale, 'content.faq.questions.ordering.answer')}
                </p>
              </div>
            </Card>
          </div>
        </div>
      </div>
    </Container>
  </Section>