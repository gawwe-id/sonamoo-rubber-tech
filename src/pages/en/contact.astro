---
import Layout from "@layouts/Default.astro";
import Container from "@components/section/Container.astro";
import Section from "@components/section/Section.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import Card from "@components/base/Card.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
---

<Layout title="Contact Us">
  <!-- Hero Section -->
  <div class="min-h-[70vh] w-full overflow-hidden bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700 relative">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent transform -skew-y-12"></div>
    </div>
    
    <Container>
      <div class="min-h-[70vh] flex items-center justify-center px-4">
        <div class="text-center space-y-6 animate-fadeIn">
          <div class="inline-block">
            <span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-white/90 text-sm font-medium border border-white/20 animate-pulse">
              Contact & Support
            </span>
          </div>
          <h1 class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-white leading-tight">
            Contact Us
          </h1>
          <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed">
            Our expert team is ready to help you find the best rubber product solutions for your industrial needs
          </p>
        </div>
      </div>
    </Container>
  </div>

  <!-- Contact Information & Form -->
  <Section>
    <Container>
      <div class="py-16">
        <SectionTitle
          title="Let's Collaborate"
          subtitle="Contact our expert team for product consultation, special offers, or discussion of your custom needs"
          minititle="Get In Touch"
          class="'text-center mx-auto'"
        />

        <div class="grid lg:grid-cols-2 gap-16">
          <!-- Contact Information -->
          <div class="space-y-8">
            <div>
              <h3 class="font-heading font-semibold text-2xl text-muted-800 dark:text-muted-100 mb-6">
                Contact Information
              </h3>
              
              <div class="space-y-6">
                <!-- Address -->
                <Card class="'p-6 hover:shadow-lg transition-all duration-300'">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-primary-100 dark:bg-primary-900/30 rounded-lg flex items-center justify-center mt-1">
                      <iconify-icon class="iconify w-6 h-6 text-primary-600" icon="ph:map-pin-duotone"></iconify-icon>
                    </div>
                    <div class="flex-1">
                      <h4 class="font-semibold text-muted-800 dark:text-muted-100 mb-2">Company Address</h4>
                      <p class="text-muted-600 dark:text-muted-300 leading-relaxed">
                        Kp. Tegal Pondoh RT.002/RW.003<br>
                        Kelurahan Singabangsa Kec.Tenjo<br>
                        Kab.Bogor-16370, Jawa Barat Indonesia
                      </p>
                    </div>
                  </div>
                </Card>

                <!-- Phone -->
                <Card class="'p-6 hover:shadow-lg transition-all duration-300'">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-emerald-100 dark:bg-emerald-900/30 rounded-lg flex items-center justify-center">
                      <iconify-icon class="iconify w-6 h-6 text-emerald-600" icon="ph:phone-duotone"></iconify-icon>
                    </div>
                    <div class="flex-1">
                      <h4 class="font-semibold text-muted-800 dark:text-muted-100 mb-2">Phone</h4>
                      <p class="text-muted-600 dark:text-muted-300">
                        <a href="tel:+6282138278015" class="hover:text-emerald-600 transition-colors duration-300">
                          +62821-3827-8015
                        </a>
                      </p>
                    </div>
                  </div>
                </Card>

                <!-- Email -->
                <Card class="'p-6 hover:shadow-lg transition-all duration-300'">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-rose-100 dark:bg-rose-900/30 rounded-lg flex items-center justify-center">
                      <iconify-icon class="iconify w-6 h-6 text-rose-600" icon="ph:envelope-duotone"></iconify-icon>
                    </div>
                    <div class="flex-1">
                      <h4 class="font-semibold text-muted-800 dark:text-muted-100 mb-2">Email</h4>
                      <p class="text-muted-600 dark:text-muted-300">
                        <a href="mailto:mfgsonamoorubbertech@gmail.com" class="hover:text-rose-600 transition-colors duration-300">
                          mfgsonamoorubbertech@gmail.com
                        </a>
                      </p>
                    </div>
                  </div>
                </Card>

                <!-- Business Hours -->
                <Card class="'p-6 hover:shadow-lg transition-all duration-300'">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-violet-100 dark:bg-violet-900/30 rounded-lg flex items-center justify-center">
                      <iconify-icon class="iconify w-6 h-6 text-violet-600" icon="ph:clock-duotone"></iconify-icon>
                    </div>
                    <div class="flex-1">
                      <h4 class="font-semibold text-muted-800 dark:text-muted-100 mb-2">Business Hours</h4>
                      <div class="text-muted-600 dark:text-muted-300 space-y-1">
                        <p>Monday - Friday: 08:00 - 17:00 WIB</p>
                        <p>Saturday: 08:00 - 12:00 WIB</p>
                        <p class="text-sm text-muted-500">Sunday & Holidays: Closed</p>
                      </div>
                    </div>
                  </div>
                </Card>
              </div>
            </div>

            <!-- Quick Contact Actions -->
            <div class="space-y-4">
              <h4 class="font-semibold text-lg text-muted-800 dark:text-muted-100">Quick Contact</h4>
              <div class="flex flex-wrap gap-3">
                <a 
                  href="tel:+6282138278015" 
                  class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-100 hover:bg-emerald-200 text-emerald-700 rounded-lg transition-colors duration-300"
                >
                  <iconify-icon class="iconify w-4 h-4" icon="ph:phone"></iconify-icon>
                  <span class="text-sm font-medium">Call Now</span>
                </a>
                <a 
                  href="mailto:mfgsonamoorubbertech@gmail.com" 
                  class="inline-flex items-center gap-2 px-4 py-2 bg-rose-100 hover:bg-rose-200 text-rose-700 rounded-lg transition-colors duration-300"
                >
                  <iconify-icon class="iconify w-4 h-4" icon="ph:envelope"></iconify-icon>
                  <span class="text-sm font-medium">Send Email</span>
                </a>
                <a 
                  href="https://wa.me/6282138278015" 
                  target="_blank"
                  rel="noopener noreferrer"
                  class="inline-flex items-center gap-2 px-4 py-2 bg-green-100 hover:bg-green-200 text-green-700 rounded-lg transition-colors duration-300"
                >
                  <iconify-icon class="iconify w-4 h-4" icon="ph:whatsapp-logo"></iconify-icon>
                  <span class="text-sm font-medium">WhatsApp</span>
                </a>
              </div>
            </div>
          </div>

          <!-- Contact Form -->
          <div>
            <Card class="'p-8'">
              <h3 class="font-heading font-semibold text-2xl text-muted-800 dark:text-muted-100 mb-6">
                Send Message
              </h3>
              
              <form class="space-y-6" action="#" method="POST">
                <!-- Name & Company -->
                <div class="grid md:grid-cols-2 gap-4">
                  <div>
                    <label for="name" class="block text-sm font-medium text-muted-700 dark:text-muted-300 mb-2">
                      Full Name <span class="text-rose-500">*</span>
                    </label>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      required
                      class="w-full px-4 py-3 border border-muted-300 dark:border-muted-600 rounded-lg bg-white dark:bg-muted-800 text-muted-800 dark:text-muted-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                      placeholder="Enter your full name"
                    />
                  </div>
                  <div>
                    <label for="company" class="block text-sm font-medium text-muted-700 dark:text-muted-300 mb-2">
                      Company Name
                    </label>
                    <input
                      type="text"
                      id="company"
                      name="company"
                      class="w-full px-4 py-3 border border-muted-300 dark:border-muted-600 rounded-lg bg-white dark:bg-muted-800 text-muted-800 dark:text-muted-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                      placeholder="Company name"
                    />
                  </div>
                </div>

                <!-- Email & Phone -->
                <div class="grid md:grid-cols-2 gap-4">
                  <div>
                    <label for="email" class="block text-sm font-medium text-muted-700 dark:text-muted-300 mb-2">
                      Email <span class="text-rose-500">*</span>
                    </label>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      required
                      class="w-full px-4 py-3 border border-muted-300 dark:border-muted-600 rounded-lg bg-white dark:bg-muted-800 text-muted-800 dark:text-muted-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                      placeholder="email@example.com"
                    />
                  </div>
                  <div>
                    <label for="phone" class="block text-sm font-medium text-muted-700 dark:text-muted-300 mb-2">
                      Phone Number
                    </label>
                    <input
                      type="tel"
                      id="phone"
                      name="phone"
                      class="w-full px-4 py-3 border border-muted-300 dark:border-muted-600 rounded-lg bg-white dark:bg-muted-800 text-muted-800 dark:text-muted-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                      placeholder="+62xxx-xxxx-xxxx"
                    />
                  </div>
                </div>

                <!-- Product Interest -->
                <div>
                  <label for="product" class="block text-sm font-medium text-muted-700 dark:text-muted-300 mb-2">
                    Product Category of Interest
                  </label>
                  <select
                    id="product"
                    name="product"
                    class="w-full px-4 py-3 border border-muted-300 dark:border-muted-600 rounded-lg bg-white dark:bg-muted-800 text-muted-800 dark:text-muted-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300"
                  >
                    <option value="">Select product category</option>
                    <option value="automotive">Automotive Products</option>
                    <option value="railway">Railway Products</option>
                    <option value="industrial">Industrial Products</option>
                    <option value="custom">Custom/Others</option>
                    <option value="general">General Consultation</option>
                  </select>
                </div>

                <!-- Message -->
                <div>
                  <label for="message" class="block text-sm font-medium text-muted-700 dark:text-muted-300 mb-2">
                    Message <span class="text-rose-500">*</span>
                  </label>
                  <textarea
                    id="message"
                    name="message"
                    rows="5"
                    required
                    class="w-full px-4 py-3 border border-muted-300 dark:border-muted-600 rounded-lg bg-white dark:bg-muted-800 text-muted-800 dark:text-muted-100 focus:ring-2 focus:ring-primary-500 focus:border-transparent transition-all duration-300 resize-none"
                    placeholder="Tell us about your rubber product needs..."
                  ></textarea>
                </div>

                <!-- Privacy Notice -->
                <div class="flex items-start gap-3 p-4 bg-primary-50 dark:bg-primary-900/20 rounded-lg">
                  <iconify-icon class="iconify w-5 h-5 text-primary-600 mt-0.5" icon="ph:info-duotone"></iconify-icon>
                  <p class="text-sm text-primary-700 dark:text-primary-300">
                    The information you provide will be used to respond to your inquiry and provide the best service. 
                    We respect your privacy and will not share your data with third parties.
                  </p>
                </div>

                <!-- Submit Button -->
                <ButtonMain to="#" class="'w-full justify-center group hover:scale-105 transition-all duration-300'">
                  <iconify-icon class="iconify w-5 h-5 group-hover:rotate-12 transition-transform duration-300" icon="ph:paper-plane-duotone"></iconify-icon>
                  <span>Send Message</span>
                </ButtonMain>
              </form>
            </Card>
          </div>
        </div>
      </div>
    </Container>
  </Section>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease-out;
  }

  /* Form focus styles */
  input:focus, select:focus, textarea:focus {
    outline: none;
    box-shadow: 0 0 0 3px rgba(52, 79, 161, 0.1);
  }

  /* Custom scrollbar for textarea */
  textarea::-webkit-scrollbar {
    width: 6px;
  }
  
  textarea::-webkit-scrollbar-thumb {
    background: rgba(156, 163, 175, 0.5);
    border-radius: 3px;
  }
  
  textarea::-webkit-scrollbar-thumb:hover {
    background: rgba(156, 163, 175, 0.7);
  }

  /* Hover effects for cards */
  .hover-lift {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hover-lift:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>