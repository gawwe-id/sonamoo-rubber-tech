---
import Layout from "@layouts/Default.astro";
import Container from "@components/section/Container.astro";
import SectionMuted from "@components/section/SectionMuted.astro";
import Section from "@components/section/Section.astro";
import SectionTitle from "@components/section/SectionTitle.astro";
import Card from "@components/base/Card.astro";
import ButtonMain from "@components/base/ButtonMain.astro";
import ButtonSub from "@components/base/ButtonSub.astro";
import CatalogProduct from "@components/section/CatalogProduct.astro";
---

<Layout title="Products">
  <!-- Hero Section -->
  <div class="min-h-[70vh] w-full overflow-hidden bg-gradient-to-br from-primary-900 via-primary-800 to-primary-700 relative">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white to-transparent transform -skew-y-12"></div>
    </div>
    
    <Container>
      <div class="min-h-[70vh] flex items-center justify-center px-4 pt-24 md:pt-6">
        <div class="text-center space-y-6 animate-fadeIn">
          <div class="inline-block">
            <span class="px-4 py-2 bg-white/10 backdrop-blur-sm rounded-full text-white/90 text-sm font-medium border border-white/20 animate-pulse">
              Specialist Rubber Products
            </span>
          </div>
          <h1 class="font-heading font-black text-5xl md:text-6xl lg:text-7xl text-white leading-tight">
            Premium Rubber Solutions
          </h1>
          <p class="text-xl md:text-2xl text-white/90 max-w-3xl mx-auto leading-relaxed">
            Comprehensive high-quality rubber product solutions for automotive, railway, electronics, and other industrial applications
          </p>
        </div>
      </div>
    </Container>
  </div>

  <!-- Company Highlights -->
  <SectionMuted>
    <Container>
      <div class="py-16">
        <div class="text-center mb-12">
          <h2 class="text-3xl font-bold text-muted-800  mb-4">
            Why Choose Sonamoo Rubber Tech?
          </h2>
          <p class="text-lg text-muted-600  max-w-2xl mx-auto">
            Trusted by industries with Korean technology and commitment to the best quality
          </p>
        </div>
        
        <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
          <div class="group text-center p-6 rounded-xl hover:bg-white  transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <iconify-icon class="iconify w-8 h-8 text-primary-600" icon="ph:lightning-duotone"></iconify-icon>
            </div>
            <h3 class="font-semibold text-lg text-muted-800  mb-2">Fast Response</h3>
            <p class="text-muted-600  text-sm">Quick response for every customer need</p>
          </div>

          <div class="group text-center p-6 rounded-xl hover:bg-white  transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-green-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <iconify-icon class="iconify w-8 h-8 text-green-600" icon="ph:currency-dollar-duotone"></iconify-icon>
            </div>
            <h3 class="font-semibold text-lg text-muted-800  mb-2">Competitive Price</h3>
            <p class="text-muted-600  text-sm">Competitive prices with guaranteed quality</p>
          </div>

          <div class="group text-center p-6 rounded-xl hover:bg-white  transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-blue-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <iconify-icon class="iconify w-8 h-8 text-blue-600" icon="ph:medal-duotone"></iconify-icon>
            </div>
            <h3 class="font-semibold text-lg text-muted-800  mb-2">Best Product</h3>
            <p class="text-muted-600  text-sm">High-quality products with Korean technology</p>
          </div>

          <div class="group text-center p-6 rounded-xl hover:bg-white  transition-all duration-300 hover:shadow-xl hover:-translate-y-2">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-orange-100 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
              <iconify-icon class="iconify w-8 h-8 text-orange-600" icon="ph:truck-duotone"></iconify-icon>
            </div>
            <h3 class="font-semibold text-lg text-muted-800  mb-2">Fast Delivery</h3>
            <p class="text-muted-600  text-sm">Fast and accurate delivery throughout Indonesia</p>
          </div>
        </div>
      </div>
    </Container>
  </SectionMuted>

 <!-- Catalog Section -->
  <CatalogProduct />

  <!-- Industrial & Railway Products -->
  <Section id="industrial">
    <Container>
      <div class="py-16">
        <div class="grid lg:grid-cols-2 gap-16 items-center">
          <!-- Content -->
          <div class="space-y-6">
            <div>
              <span class="px-3 py-1 bg-primary-100 text-primary-700 rounded-full text-sm font-medium">
                Industrial Solutions
              </span>
            </div>
            <h2 class="text-4xl font-bold text-muted-800  leading-tight">
              Integrated Industrial 
              <span class="text-primary-600">Solutions</span>
            </h2>
            <p class="text-lg text-muted-600  leading-relaxed">
              From railway components to electronic applications, we provide reliable rubber solutions for various industrial needs with international quality standards.
            </p>
            
            <div class="grid sm:grid-cols-2 gap-4">
              <div class="flex items-start space-x-3 p-4 rounded-lg hover:bg-primary-50  transition-colors duration-300">
                <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center mt-1">
                  <iconify-icon class="iconify w-4 h-4 text-white" icon="lucide:check"></iconify-icon>
                </div>
                <div>
                  <h4 class="font-semibold text-muted-800 ">NBR Float</h4>
                  <p class="text-sm text-muted-600 ">High-quality components</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3 p-4 rounded-lg hover:bg-primary-50  transition-colors duration-300">
                <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center mt-1">
                  <iconify-icon class="iconify w-4 h-4 text-white" icon="lucide:check"></iconify-icon>
                </div>
                <div>
                  <h4 class="font-semibold text-muted-800 ">Silicon O-Ring</h4>
                  <p class="text-sm text-muted-600 ">Very high pressure</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3 p-4 rounded-lg hover:bg-primary-50  transition-colors duration-300">
                <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center mt-1">
                  <iconify-icon class="iconify w-4 h-4 text-white" icon="lucide:check"></iconify-icon>
                </div>
                <div>
                  <h4 class="font-semibold text-muted-800 ">Grommet</h4>
                  <p class="text-sm text-muted-600 ">Electronic applications</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3 p-4 rounded-lg hover:bg-primary-50  transition-colors duration-300">
                <div class="w-8 h-8 bg-primary-600 rounded-lg flex items-center justify-center mt-1">
                  <iconify-icon class="iconify w-4 h-4 text-white" icon="lucide:check"></iconify-icon>
                </div>
                <div>
                  <h4 class="font-semibold text-muted-800 ">Bellows</h4>
                  <p class="text-sm text-muted-600 ">Automotive components</p>
                </div>
              </div>
            </div>

            <ButtonMain to="/contact" class="'group hover:scale-105 transition-all duration-300'">
              <span>Consult Your Needs</span>
              <iconify-icon class="iconify w-5 h-5 group-hover:translate-x-1 transition-transform duration-300" icon="lucide:arrow-right"></iconify-icon>
            </ButtonMain>
          </div>

          <!-- Visual Grid -->
          <div class="grid grid-cols-2 gap-4">
            <div class="space-y-4">
              <Card class="'p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 bg-gradient-to-br from-blue-50 to-blue-100  '">
                <iconify-icon class="iconify w-12 h-12 text-blue-600 mb-3" icon="ph:train-duotone"></iconify-icon>
                <h4 class="font-semibold text-muted-800  mb-2">Railway Components</h4>
                <p class="text-sm text-muted-600 ">Duct & Corrugated Bellow</p>
              </Card>
              
              <Card class="'p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 bg-gradient-to-br from-green-50 to-green-100  '">
                <iconify-icon class="iconify w-12 h-12 text-green-600 mb-3" icon="ph-lightning-duotone"></iconify-icon>
                <h4 class="font-semibold text-muted-800  mb-2">Electronic Parts</h4>
                <p class="text-sm text-muted-600 ">Grommet & Implant</p>
              </Card>
            </div>
            
            <div class="space-y-4 mt-8">
              <Card class="'p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 bg-gradient-to-br from-purple-50 to-purple-100  '">
                <iconify-icon class="iconify w-12 h-12 text-purple-600 mb-3" icon="ph:gear-duotone"></iconify-icon>
                <h4 class="font-semibold text-muted-800  mb-2">Industrial Seals</h4>
                <p class="text-sm text-muted-600 ">O-Ring & Connectors</p>
              </Card>
              
              <Card class="'p-6 hover:shadow-lg hover:-translate-y-1 transition-all duration-300 bg-gradient-to-br from-orange-50 to-orange-100  '">
                <iconify-icon class="iconify w-12 h-12 text-orange-600 mb-3" icon="ph:wrench-duotone"></iconify-icon>
                <h4 class="font-semibold text-muted-800  mb-2">Custom Solutions</h4>
                <p class="text-sm text-muted-600 ">Custom specifications</p>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Call to Action -->
  <SectionMuted>
    <Container>
      <div class="py-16">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-4xl font-bold text-muted-800  mb-6">
            Ready to Collaborate with 
            <span class="text-primary-600">Sonamoo Rubber Tech?</span>
          </h2>
          <p class="text-xl text-muted-600  mb-8 leading-relaxed">
            Contact our expert team for product consultation, special offers, or discussion of your custom needs. 
            We are ready to be your trusted partner for high-quality rubber solutions.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-8">
            <ButtonMain to="/contact" class="'group text-lg px-8 py-4 hover:scale-105 hover:shadow-xl transition-all duration-300'">
              <iconify-icon class="iconify w-5 h-5 group-hover:rotate-12 transition-transform duration-300" icon="ph:phone-duotone"></iconify-icon>
              <span>Contact Now</span>
            </ButtonMain>
            <ButtonSub to="/about" class="'text-lg px-8 py-4 hover:scale-105 transition-all duration-300'">
              <span>About Us</span>
              <iconify-icon class="iconify w-5 h-5" icon="lucide:arrow-right"></iconify-icon>
            </ButtonSub>
          </div>


        </div>
      </div>
    </Container>
  </SectionMuted>
</Layout>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInRight {
    from {
      opacity: 0;
      transform: translateX(50px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fadeIn {
    animation: fadeIn 1s ease-out;
  }

  .animate-slideInRight {
    animation: slideInRight 0.8s ease-out;
  }

  /* Custom hover effects */
  .hover-lift {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .hover-lift:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }
</style>